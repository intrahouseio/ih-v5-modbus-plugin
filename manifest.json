{
  "name": "modbus",
  "description": "Modbus plugin (TCP, RTU, RTU over TCP)",
  "single": 0,
  "restartOnChannelsChange": 0,

  "innerId":1,
  "hasTryStartState":1,

  "share_node_folder_fields":["parentoffset", "unitid"],
  
  "channel_folder_popup": {
    "add": [
      { "id": "channel_folder", "title": "$NewFolder" },
      { "id": "channel_node_folder", "title": "$NewNode" },
      { "id": "channel", "title": "$Channel" }
    ],
    "copypaste": true,
    "delete": true
  },

  "channel_popup": {
    "add": [{ "id": "channel", "title": "$Channel" }],
    "copypaste": true,
    "delete": true
  },


  "default_channel_node_folder": {
    "foldertype": "node",
    "chan": "$NewNode",
    "unitid":1
  },

  "default_channel": {
      "chan": "ch1",
      "r":1,
      "desc": "AO",
      "vartype": "int16",
      "address": "0x0000",
      "unitid": 1,
      "pollp": true,
      "fcr": "3",
      "gr": true,
      "usek": false,
      "ks0": 0,
      "ks": 100,
      "kh0": 0,
      "kh": 100
  }
}
